<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageViewMenuIcon"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:padding="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewMenuName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewMenuIcon"
        app:layout_constraintEnd_toStartOf="@+id/imageViewMenuArrow"
        app:layout_constraintStart_toEndOf="@+id/imageViewMenuIcon"
        app:layout_constraintTop_toTopOf="@+id/imageViewMenuIcon" />

    <ImageView
        android:id="@+id/imageViewMenuArrow"
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewMenuName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewMenuName"
        app:srcCompat="@drawable/ic_action_arrow_right" />
</android.support.constraint.ConstraintLayout>